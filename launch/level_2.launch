<?xml version="1.0"?>

<launch>
  <include file="$(find ugv_course_launch)/launch/a1_nav_sim_gazebo.launch" />

  <node pkg="move_base" type="move_base" name="move_base">
    <rosparam ns="global_costmap" file="$(find ECE_5532_Final_Project)/yaml/global_costmap_params.yaml"/>
    <rosparam ns="local_costmap" file="$(find ECE_5532_Final_Project)/yaml/local_costmap_params.yaml"/>
    <rosparam ns="NavfnROS" file="$(find ECE_5532_Final_Project)/yaml/global_planner_params.yaml"/>
    <rosparam ns="TrajectoryPlannerROS" file="$(find ECE_5532_Final_Project)/yaml/local_planner_params.yaml"/> 
    <rosparam file="$(find ECE_5532_Final_Project)/yaml/move_base_params.yaml"/> 
    <remap from="cmd_vel" to="/a1/cmd_vel" />
 </node>

  <node pkg="tf" type="static_transform_publisher" name="world_to_map" args="0 0 0 0 0 0 world map 30" />
  <node ns="a1" pkg="a1_twist_controller" type="a1_twist_control" name="a1_twist_control" /> 
</launch>